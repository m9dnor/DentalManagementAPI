@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <!-- Dashboard Header -->
    <div class="row bg-primary text-white p-4 shadow-sm">
        <div class="col d-flex align-items-center">
            <h2 class="fw-bold mb-0">📊 Staff Dashboard</h2>
        </div>
    </div>

    <!-- Dashboard Stats -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Patients</h5>
                    <h2>245</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Appointments Today</h5>
                    <h2>18</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Pending Treatments</h5>
                    <h2>7</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Staff Members</h5>
                    <h2>12</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Patients")" class="text-decoration-none">
                <div class="card text-center bg-info text-white shadow">
                    <div class="card-body">
                        <h5 class="card-title">Manage Patients</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Treatments")" class="text-decoration-none">
                <div class="card text-center bg-warning text-dark shadow">
                    <div class="card-body">
                        <h5 class="card-title">Treatment Records</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>


<style>
    .hero-section {
        background: url('/images/hero-bg.jpg') no-repeat center center/cover;
        padding: 100px 20px;
        border-radius: 10px;
    }

    .gallery img {
        height: 250px;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
    }

        .gallery img:hover {
            transform: scale(1.05);
        }

    .contact-section {
        border-radius: 10px;
    }
</style>
