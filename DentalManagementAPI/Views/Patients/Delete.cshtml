@model DentalManagementAPI.Models.Patient

<h2 class="text-center text-primary">Delete Patient</h2>
<h3 class="text-center text-info">Are you sure you want to delete this patient?</h3>

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Patient Name</dt>
            <dd class="col-sm-9">@Model.PatientName</dd>

            <dt class="col-sm-3 fw-bold">Date of Birth</dt>
            <dd class="col-sm-9">@Model.DOB.ToShortDateString()</dd>

            <dt class="col-sm-3 fw-bold">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-bold">Appointment Date</dt>
            <dd class="col-sm-9 text-danger">@Model.AppointmentDate.ToShortDateString()</dd>
        </dl>

        <form asp-action="Delete" method="post" class="text-center mt-3">
            <input type="hidden" asp-for="PatientID" />
            <button type="submit" class="btn btn-danger btn-lg px-4"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-4"><i class="fas fa-times"></i> Cancel</a>
        </form>
    </div>
</div>
