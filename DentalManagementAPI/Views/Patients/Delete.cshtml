@model DentalManagementAPI.Models.Patient

<div class="container mt-4">
    <div class="delete-card">
        <h2 class="text-center text-danger">⚠️ Confirm Deletion</h2>
        <p class="text-center">Are you sure you want to delete this patient? This action <strong>cannot be undone.</strong></p>

        <div class="patient-details">
            <p><strong>👤 Name:</strong> @Model.PatientName</p>
            <p><strong>🎂 DOB:</strong> @Model.DOB.ToShortDateString()</p>
            <p><strong>📧 Email:</strong> @Model.Email</p>
        </div>

        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="PatientID" />
            <button type="submit" class="btn btn-danger delete-btn">🗑️ Delete Patient</button>
            <a asp-action="Index" class="btn btn-secondary cancel-btn">❌ Cancel</a>
        </form>
    </div>
</div>

<style>
    /* Delete Card */
    .delete-card {
        max-width: 500px;
        background: #fff;
        padding: 30px;
        margin: auto;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 4px 12px rgba(255, 0, 0, 0.2);
        border-left: 5px solid #dc3545;
    }

    /* Patient Details */
    .patient-details {
        background: #f8d7da;
        padding: 15px;
        border-radius: 8px;
        border-left: 5px solid #dc3545;
        margin-bottom: 20px;
    }

    /* Buttons */
    .delete-btn {
        background: #dc3545;
        color: white;
        font-size: 1rem;
        padding: 10px 25px;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .delete-btn:hover {
            background: #c82333;
            transform: scale(1.05);
        }

    .cancel-btn {
        font-size: 1rem;
        padding: 10px 20px;
        border-radius: 8px;
    }

    h2 {
        font-weight: bold;
        margin-bottom: 15px;
    }
</style>
