@model DentalManagementAPI.Models.Patient

<div class="container mt-5 text-center">
    <h2 class="text-danger">Delete Patient</h2>
    <p class="text-primary">Are you sure you want to delete this patient?</p>

    <div class="card mx-auto shadow p-4" style="max-width: 500px; background-color: #F8Fbff;">
        <div class="row">
            <dt class="col-sm-4 font-weight-bold">Patient Name</dt>
            <dd class="col-sm-8">@Model.PatientName</dd>

            <dt class="col-sm-4 font-weight-bold">Date of Birth</dt>
            <dd class="col-sm-8">@Model.DOB.ToShortDateString()</dd>

            <dt class="col-sm-4 font-weight-bold">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4 font-weight-bold">Appointment Date</dt>
            <dd class="col-sm-8 text-danger">@Model.AppointmentDate.ToShortDateString()</dd>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PatientID" />
        <div class="d-flex justify-content-center gap-2 mt-3">
            <button type="submit" class="btn btn-danger px-4">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary px-4">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
