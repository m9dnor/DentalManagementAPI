@model IEnumerable<DentalManagementAPI.Models.Patient>

<h2 class="text-center mt-4">🦷 Our Patients</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var patient in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card patient-card shadow-lg border-2 border-primary">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold text-primary">@patient.PatientName</h5>
                        <hr class="my-2 border-primary">
                        <p class="text-muted mb-1">📅 <strong>DOB:</strong> @patient.DOB.ToShortDateString()</p>
                        <p class="text-muted mb-1">✉️ <strong>Email:</strong> @patient.Email</p>
                        <p class="text-muted mb-2">🗓️ <strong>Appointment:</strong> @patient.AppointmentDate.ToShortDateString()</p>

                        <div class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-route-id="@patient.PatientID" class="btn btn-primary me-2">
                                ✏️ Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@patient.PatientID" class="btn btn-danger">
                                🗑️ Remove
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn register-btn">
            <span class="icon">🆕</span> Register Patient
        </a>
    </div>
</div>

<style>
    .patient-card {
        background: #ffffff;
        border-radius: 10px;
        border: 2px solid #007bff; /* Blue border for visibility */
        box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .patient-card:hover {
            transform: translateY(-5px);
            box-shadow: 6px 6px 15px rgba(0, 0, 0, 0.2);
        }

    .btn-primary:hover {
        background: #0056b3;
    }

    .btn-danger:hover {
        background: #b30021;
    }

    .register-btn {
        background: linear-gradient(90deg, #00c6ff, #0072ff);
        color: white;
        font-size: 1.3rem;
        font-weight: bold;
        padding: 15px 40px;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease-in-out;
        position: relative;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 183, 255, 0.6);
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

        .register-btn:hover {
            background: linear-gradient(90deg, #0072ff, #00c6ff);
            box-shadow: 0 0 20px rgba(0, 183, 255, 0.9);
            transform: scale(1.05);
        }

        .register-btn:active {
            transform: scale(0.98);
            box-shadow: 0 0 10px rgba(0, 183, 255, 0.8);
        }

    .icon {
        background: white;
        color: #0072ff;
        border-radius: 50%;
        padding: 5px;
        font-size: 1.2rem;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
    }
</style>
