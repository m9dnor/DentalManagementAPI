@model IEnumerable<DentalManagementAPI.Models.Patient>

<h2 class="text-center mt-4">🦷 Our Patients</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var patient in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card patient-card shadow-lg border-2 border-primary">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold text-primary">@patient.PatientName</h5>
                        <hr class="my-2 border-primary">
                        <p class="text-muted mb-1">📅 <strong>DOB:</strong> @patient.DOB.ToShortDateString()</p>
                        <p class="text-muted mb-1">✉️ <strong>Email:</strong> @patient.Email</p>
                        <p class="text-muted mb-2">🗓️ <strong>Appointment:</strong> @patient.AppointmentDate.ToShortDateString()</p>

                        <div class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-route-id="@patient.PatientID" class="btn btn-primary me-2">
                                ✏️ Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@patient.PatientID" class="btn btn-danger">
                                🗑️ Remove
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn register-btn">
            <span class="icon">🆕</span> Register New Patient
        </a>
    </div>
</div>

<style>
    .patient-card {
        background: #ffffff;
        border-radius: 10px;
        border: 2px solid #007bff; /* Blue border for visibility */
        box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .patient-card:hover {
            transform: translateY(-5px);
            box-shadow: 6px 6px 15px rgba(0, 0, 0, 0.2);
        }

    .btn-primary:hover {
        background: #0056b3;
    }

    .btn-danger:hover {
        background: #b30021;
    }

    .register-btn {
        display: inline-flex;
        align-items: center;
        background: #007bff;
        color: white;
        font-size: 1.2rem;
        padding: 12px 25px;
        border-radius: 50px;
        text-decoration: none;
        box-shadow: 0px 4px 10px rgba(0, 123, 255, 0.3);
        transition: 0.3s ease-in-out;
        border: 2px solid #007bff;
    }

        .register-btn:hover {
            background: white;
            color: #007bff;
            transform: scale(1.05);
        }

       

    .icon {
        font-size: 1.5rem;
        margin-right: 10px;
    }
</style>
