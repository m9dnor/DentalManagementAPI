@model DentalManagementAPI.Models.Treatment

<div class="container mt-5 text-center">
    <h2 class="text-danger">Delete Treatment</h2>
    <p class="text-primary">Are you sure you want to delete this treatment?</p>

    <div class="card mx-auto shadow p-4" style="max-width: 500px; background-color: #f8fbff;">
        <dl class="row">
            <dt class="col-sm-4 font-weight-bold">Treatment Name</dt>
            <dd class="col-sm-8">@Model.TreatmentName</dd>

            <dt class="col-sm-4 font-weight-bold">Specialist</dt>
            <dd class="col-sm-8">@Model.TreatmentSpecialist</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="TreatmentID" />

            <div class="d-flex justify-content-center gap-2 mt-3">
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
