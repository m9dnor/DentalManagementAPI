@model DentalManagementAPI.Models.Treatment

<div class="container mt-5">
    <div class="card mx-auto shadow-lg p-4 bg-light rounded" style="max-width: 400px;">
        <h3 class="text-center mb-4">
            <i class="fas fa-tooth text-primary"></i> Create New Treatment
        </h3>
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="TreatmentName" class="form-label fw-bold">Treatment Name</label>
                <input asp-for="TreatmentName" class="form-control form-control-sm" placeholder="Enter treatment name" />
                <span asp-validation-for="TreatmentName" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TreatmentSpecialist" class="form-label fw-bold">Treatment Specialist</label>
                <input asp-for="TreatmentSpecialist" class="form-control form-control-sm" placeholder="Enter specialist name" />
                <span asp-validation-for="TreatmentSpecialist" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TreatmentPrice" class="form-label fw-bold">Treatment Price ($)</label>
                <input asp-for="TreatmentPrice" type="number" step="0.01" class="form-control form-control-sm" placeholder="Enter price" />
                <span asp-validation-for="TreatmentPrice" class="text-danger small"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fas fa-check"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<!-- FontAwesome for icons -->
<script src="https://kit.fontawesome.com/YOUR-KIT-ID.js" crossorigin="anonymous"></script>
