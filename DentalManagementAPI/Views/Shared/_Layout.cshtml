<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dental Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DentalManagementAPI.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header class="d-flex justify-content-between align-items-center p-3 bg-primary text-white">
        <div class="d-flex align-items-center">
            <img src="~/images/dental_logo.png" alt="Dental Care Logo" height="40" class="me-2">
            <h3 class="mb-0">Dental Care</h3>
        </div>
       
    </header>

    <div class="container mt-4">
        <!-- Back to Home Button -->
        <div class="mb-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary rounded-pill shadow-sm px-4">
                ← Back to Home
            </a>
        </div>
        <main role="main">
          
            @RenderBody()
        </main>

    </div>

    <footer class="text-center text-muted mt-4 py-3 bg-dark text-white">
        <div class="container">
            &copy; 2025 - Dental Care | <a href="/Home/Privacy" class="text-white">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
