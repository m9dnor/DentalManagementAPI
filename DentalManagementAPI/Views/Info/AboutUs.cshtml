@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <!-- Title Section -->
    <div class="text-center">
        <h2 class="text-primary fw-bold">Who We Are</h2>
        <p class="text-muted">Your trusted partner for exceptional dental care.</p>
    </div>

    <!-- Introduction Section -->
    <div class="row align-items-center mt-4">
        <div class="col-md-6">
            <p class="lead">
                Welcome to our Dental Management System! We are dedicated to providing **high-quality, patient-centered care** with advanced technology and a skilled team of professionals.
            </p>
            <p>
                From **routine checkups** to **specialized treatments**, we offer a **stress-free and comfortable experience**. Your smile is our priority!
            </p>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/images/dental-care.jpg" class="img-fluid rounded shadow-lg" alt="Dental Clinic">
        </div>
    </div>

    <!-- Mission & Values -->
    <div class="mt-5 p-4 bg-light rounded shadow">
        <h3 class="text-secondary text-center">✨ Our Mission & Values ✨</h3>
        <div class="row mt-3 text-center">
            <div class="col-md-4">
                <h5>❤️ Patient-Centered Care</h5>
                <p>We prioritize comfort, trust, and excellent results.</p>
            </div>
            <div class="col-md-4">
                <h5>🔬 Advanced Technology</h5>
                <p>State-of-the-art equipment for top-tier treatments.</p>
            </div>
            <div class="col-md-4">
                <h5>📚 Continuous Learning</h5>
                <p>Our team stays updated with the latest dental innovations.</p>
            </div>
        </div>
    </div>

    <!-- Doctor Team Section -->
    <div class="mt-5">
        <h3 class="text-secondary text-center">👨‍⚕️ Meet Our Expert Dentists</h3>
        <div class="row text-center mt-4">
            <div class="col-md-3">
                <img src="~/images/Emily.jpg" class="rounded-circle shadow-lg" width="100" alt="Dr. Emily">
                <p class="mt-2 fw-bold">Dr. Emily Carter</p>
                <p class="text-muted">Cosmetic Dentistry</p>
            </div>
            <div class="col-md-3">
                <img src="~/images/James.jpg" class="rounded-circle shadow-lg" width="100" alt="Dr. James">
                <p class="mt-2 fw-bold">Dr. James Wilson</p>
                <p class="text-muted">Orthodontics</p>
            </div>
            <div class="col-md-3">
                <img src="~/images/Sophia.jpg" class="rounded-circle shadow-lg" width="100" alt="Dr. Sophia">
                <p class="mt-2 fw-bold">Dr. Sophia Lee</p>
                <p class="text-muted">Pediatric Dentistry</p>
            </div>
            <div class="col-md-3">
                <img src="~/images/Robert.jpg" class="rounded-circle shadow-lg" width="100" alt="Dr. Robert">
                <p class="mt-2 fw-bold">Dr. Robert Brown</p>
                <p class="text-muted">Endodontics</p>
            </div>
        </div>
    </div>

    <!-- Why Choose Us -->
    <div class="mt-5">
        <h3 class="text-secondary text-center">⭐ Why Choose Us? ⭐</h3>
        <ul class="list-group list-group-flush mt-3">
            <li class="list-group-item"><strong>✅ Personalized Treatments</strong> – Every patient gets tailored care.</li>
            <li class="list-group-item"><strong>✅ Modern & Hygienic Facility</strong> – Safe, clean, and comfortable environment.</li>
            <li class="list-group-item"><strong>✅ Affordable Pricing</strong> – Quality dental care within your budget.</li>
        </ul>
    </div>

    <!-- Contact Section -->
    <div class="mt-5 p-4 bg-light rounded shadow">
        <h3 class="text-secondary text-center">📍 Visit Us</h3>
        <p class="text-center">We are open **Monday - Sunday (9 AM - 10 PM)**</p>
        <p class="text-center">📞 Call us at **(123) 456-7890**</p>
        <p class="text-center">📍 Location: 123 Smile Street, Dental City</p>
    </div>
</div>

<!-- Styling -->
<style>
    .container {
        max-width: 900px;
        margin: auto;
    }

    .rounded-circle {
        width: 90px;
        height: 90px;
        object-fit: cover;
    }

    .list-group-item {
        font-size: 1.1rem;
    }

    h3 {
        font-weight: bold;
    }
</style>
